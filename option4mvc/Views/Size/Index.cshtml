@model List<Size>

@{
    ViewData["Title"] = "Size List";
}



<div class="text-center">
    <h1 class="display-4">Size List</h1>

    @if (Model.Count == 0)
    {
        <p>No items in inventory yet!</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.SizePrice</td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<p><a asp-controller="Size" asp-action="Create">Create Size Item</a></p>

<p><a asp-controller="Size" asp-action="Delete">Delete Size Item</a></p>

<p><a asp-controller="Size" asp-action="Edit">Edit Size Item</a></p>

