@model option4mvc.Models.Size

<h2>Create Packaging Item</h2>
<br />

<form asp-controller="Size" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Size Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="Description">Size Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="SizePrice">Size Price</label>
        <input asp-for="SizePrice" class="form-control" />
        <span asp-validation-for="SizePrice" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="Quantity">Size InStock Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <br />

    <input type="submit" value="Add Item" />
</form>